<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>OpenTodoList</Name>
    <Version>$Version</Version>
    <Title>OpenTodoList Installer</Title>
    <Publisher>RPdev</Publisher>
    <ProductUrl>https://www.rpdev.net/home/project/opentodolist</ProductUrl>
    <StartMenuDir>OpenTodoList</StartMenuDir>
    <TargetDir>@homeDir@/OpenTodoList</TargetDir>
    <AdminTargetDir>@rootDir@/OpenTodoList</AdminTargetDir>
    <Icon>OpenTodoList</Icon>
    <UninstallerName>OpenTodoListMaintenanceTool</UninstallerName>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <RemoteRepositories>
        <Repository>
        <Url>$RepositoryUrl</Url>
        <Enabled>1</Enabled>
        <DisplayName>OpenTodoList Repository</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>
